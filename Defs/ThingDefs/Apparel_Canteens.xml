<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef Name="CanteenBase" Abstract="True">
    <thingClass>achan1989.dehydration.Apparel_WithCompGizmos</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>20</MaxHitPoints>
      <Flammability>0.0</Flammability>
      <DeteriorationRate>0.2</DeteriorationRate>
      <SellPriceFactor>0.2</SellPriceFactor>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <thingCategories>
      <li>WearableWaterCarrier</li>
    </thingCategories>
    <comps>
      <li>
        <compClass>CompForbiddable</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
    <apparel>
        <bodyPartGroups>
            <li>Torso</li>
            <li>Legs</li>
        </bodyPartGroups>
        <layers>
            <li>Accessory</li>
        </layers>
        <defaultOutfitTags>
            <li>Anything</li>
            <li>Worker</li>
            <li>Soldier</li>
            <li>Nudist</li>
      </defaultOutfitTags>
    </apparel>
</ThingDef>

<ThingDef Name="WaterskinMakeableBase" ParentName="CanteenBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>TailoringSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <recipeUsers>
        <li>TableTailor</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    </recipeMaker>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
</ThingDef>

<ThingDef Name="CanteenMakeableBase" ParentName="CanteenBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>TableSmithing</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>
    </recipeMaker>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
</ThingDef>

